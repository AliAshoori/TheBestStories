{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "App": {
    "HackerNewsApi": {
      "BaseUrl": "https://hacker-news.firebaseio.com",
      "Version": "v0",
      "RetryCount": 2,
      "RetryWaitDurationInSec": 30,
      "CircuitBreakDurationInSec": 60,
      "HandledEventsAllowedBeforeBreaking": 5
    },
    "MemoryCache": {
      "DurationInSec": 60,
      "BestStoriesKey": "Best_Stories_From_Cache"
    }
  },
  "AllowedHosts": "*"
}
